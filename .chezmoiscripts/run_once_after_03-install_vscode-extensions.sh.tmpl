#!{{ lookPath "sh" }}

# set -euo pipefail

# Check if VS Code is installed
if command -v code >/dev/null 2>&1; then
  while read -r ext; do
    if ! code --list-extensions | grep -qx "$ext"; then
      code --install-extension "$ext"
    fi
  done < {{ .chezmoi.sourceDir }}/vscode-extensions.txt
fi
