#!{{ lookPath "sh" }}

# set -euo pipefail

# Colors
GREEN="\033[0;32m"
RED="\033[0;31m"
NC="\033[0m" # No Color

{{ if eq .chezmoi.os "linux" -}}
export PATH="/home/linuxbrew/.linuxbrew/bin:$PATH"
{{ else if eq .chezmoi.os "darwin" -}}
export PATH="/opt/homebrew/bin:$PATH"
{{ end -}}

# Check if Neovim is installed
if ! command -v nvim >/dev/null 2>&1; then
  printf "\n%sNeovim is not installed. Please install it first.%s\n\n" "$RED" "$NC"
  exit 1
fi

# Target directory for NvChad
NVIM_CONFIG_DIR="${HOME}/.config/nvim"

# If NvChad is not already installed, clone it
if [ ! -d "$NVIM_CONFIG_DIR" ]; then
  printf "\n%sInstalling NvChad...%s\n\n" "$GREEN" "$NC"
  git clone https://github.com/NvChad/starter "$NVIM_CONFIG_DIR"
else
  printf "\n%sNvChad is already installed in %s%s\n\n" "$GREEN" "$NVIM_CONFIG_DIR" "$NC"
fi
