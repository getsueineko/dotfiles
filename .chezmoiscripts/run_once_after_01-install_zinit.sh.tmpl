#!{{ lookPath "sh" }}

# set -euo pipefail

# Colors
GREEN="\033[0;32m"
RED="\033[0;31m"
NC="\033[0m" # No Color

{{ if eq .chezmoi.os "linux" -}}
export PATH="/home/linuxbrew/.linuxbrew/bin:$PATH"
{{ else if eq .chezmoi.os "darwin" -}}
export PATH="/opt/homebrew/bin:$PATH"
{{ end -}}

# Check if zsh is installed
if ! command -v zsh >/dev/null 2>&1; then
    printf "\n${RED}Zsh is not installed. Please install zsh and try again.${NC}\n\n"
    exit 1
fi

# Check if zinit is already installed
if [ ! -d "${HOME}/.zinit/bin" ]; then
    printf "\n${GREEN}Installing zinit...${NC}\n\n"
    # Run the official zinit install script
    sh -c "$(curl -fsSL https://raw.githubusercontent.com/zdharma-continuum/zinit/main/scripts/install.sh)"
else
    printf "\n${GREEN}zinit is already installed â€” skipping${NC}\n\n"
fi
