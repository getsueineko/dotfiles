#!{{ lookPath "sh" }}

# set -euo pipefail

# Check if starship is installed
if ! command -v starship >/dev/null 2>&1; then
    echo "Installing starship..."

    # Install starship using the official install script (Linux/macOS)
    curl -fsSL https://starship.rs/install.sh | bash -s -- -y

    # Optionally add starship to PATH for current session
    export PATH="$HOME/.cargo/bin:$PATH"
else
    echo "Starship is already installed â€” skipping"
fi
