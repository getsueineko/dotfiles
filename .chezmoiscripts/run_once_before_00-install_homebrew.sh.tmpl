#!{{ lookPath "sh" }}

# set -euo pipefail

# Colors
GREEN="\033[0;32m"
RED="\033[0;31m"
NC="\033[0m" # No Color

# Check if brew is already installed
if ! command -v brew >/dev/null 2>&1; then
    printf "\n%sInstalling Homebrew...%s\n\n" "$GREEN" "$NC"

    # Install Homebrew using the official Linux install script
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

else
    printf "\n%sHomebrew is already installed â€” skipping%s\n\n" "$GREEN" "$NC"
fi
