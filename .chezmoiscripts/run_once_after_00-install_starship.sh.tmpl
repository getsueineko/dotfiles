#!{{ lookPath "sh" }}

# set -euo pipefail

# Colors
GREEN="\033[0;32m"
RED="\033[0;31m"
NC="\033[0m" # No Color

# Check if starship is installed
if ! command -v starship >/dev/null 2>&1; then
    printf "\n%sInstalling starship...%s\n\n" "$GREEN" "$NC"

    # Install starship using the official install script (Linux/macOS)
    curl -sS https://starship.rs/install.sh | sh -s -- -y

    # Optionally add starship to PATH for current session
    export PATH="$HOME/.cargo/bin:$PATH"
else
    printf "\n%sStarship is already installed â€” skipping%s\n\n" "$GREEN" "$NC"
fi
