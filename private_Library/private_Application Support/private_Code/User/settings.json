{
  // === Workbench / UI ===
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "Monokai Pro (Filter Machine) Icons",
  "workbench.preferredDarkColorTheme": "Monokai Pro (Filter Machine)",
  "workbench.preferredLightColorTheme": "Visual Studio Light",
  // fallback если Monokai Pro не установлена
  // === Terminal ===
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  // === Editor ===
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  // === Docker ===
  "docker.extension.enableComposeLanguageServer": false,
  // === YAML ===
  "yaml.schemas": {
    "file:///Users/neko/.vscode/extensions/continue.continue-1.2.3-darwin-arm64/config-yaml-schema.json": [
      ".continue/**/*.yaml"
    ]
  },
  "yaml.validate": true, // включить валидацию YAML
  "yaml.format.enable": true, // автоформатирование YAML
  "yaml.hover": true, // подсказки при наведении
  "yaml.completion": true, // автодополнение
  "yaml.customTags": [
    "!Ref",
    "!GetAtt"
  ], // пример кастомных тегов для AWS CloudFormation и др.
  // === Miscellaneous ===
  "files.trimTrailingWhitespace": true, // удалять пробелы в конце строки
  "files.insertFinalNewline": true, // вставлять финальный перевод строки
  "editor.minimap.enabled": false,
  "workbench.colorTheme": "Catppuccin Frappé",
  "workbench.settings.applyToAllProfiles": [] // отключить миникарту для ускорения работы
}